pipeline {
    agent {
        docker { image 'maven:3.8.6-openjdk-8' }
    }
    stages {
        stage('Build app') {  
            steps {
                sh """
                cd Bookstore && \
                mvn clean install -DskipTests
                """
            }
        }
    }
    post {
        // Clean after build
        always {
            cleanWs()
        }
    }
}


